modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Android"

[[workflows.workflow]]
name = "Expo Web Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --web --port 5000 --host lan --clear"
waitForPort = 5000

[[workflows.workflow]]
name = "Expo Android"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --android --clear"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[deployment]
deploymentTarget = "autoscale"
run = ["npx", "serve", "dist", "-s", "-l", "5000"]
build = ["npx", "expo", "export", "-p", "web"]
